<?xml version="1.0"?>
<project name="Scratch Build">

	<!-- Property settings -->
	<property file="build/config/build.properties" />
	<property file="build/config/submodules.properties" />
	<!-- Import macrodefs -->
	<property name="macros.git" location="build/macrodefs/git.xml"/>
	<import file="${macros.git}"/>

	<!-- Add Submodules for ext tools -->
	<!-- <target name="submodules"> -->
		<echo message="add submodules" />
		<git-submodule repository="${submodule.yepnope}" destination="yepnope" />
		<git-submodule repository="${submodule.h5bp}" destination="html5-boilerplate" />
		<git-submodule repository="${submodule.foundation}" destination="foundation" />
	<!-- </target> -->
	
	<!-- Copy files from submodules to their new home-->
	<!-- <target name="copy files"> -->
		<echo message="copying submodules files" />
		<copy file="${dir.sm}/yepnope/yepnope.js" todir="${dir.js}" overwrite="Yes" />
		<copy file="${dir.sm}/html5-boilerplate/build/config/default.properties" todir="${dir.config}" overwrite="Yes" />
	<!-- </target> -->

</project>